<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:postgresql://localhost:5432/postgres</property>
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <mapping resource="CountriesEntity.hbm.xml"/>
        <mapping class="company.domain.entity.CountriesEntity"/>
        <mapping resource="ManufacturersEntity.hbm.xml"/>
        <mapping class="company.domain.entity.ManufacturersEntity"/>
        <mapping resource="ProductsEntity.hbm.xml"/>
        <mapping class="company.domain.entity.ProductsEntity"/>
        <!-- <property name="connection.username"/> -->
        <!-- <property name="connection.password"/> -->

        <!-- DB schema will be updated if needed -->
        <!-- <property name="hibernate.hbm2ddl.auto">update</property> -->
    </session-factory>
</hibernate-configuration>